<%- include("../partials/header.ejs")%>

<h2 class="text-warning mt-5 ml-5">
	EDIT SONG :
</h2>


<div class="row justify-content-center">
	<div class="col-lg-5 col-md-7 col-sm-10">

		<form class="p-5" action="/musics/<%=music._id%>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" class="form-control " value="<%=music.title%>" name="title">
			</div>
			<div class="form-group">
				<input type="text" class="form-control "value="<%=music.artist%>" name="artist">
			</div>
			<div class="form-group">
				<input type="text" class="form-control " value="<%=music.image%>" name="image">
			</div>
			<div class="form-group">
				<textarea rows="3" class="form-control " name="description"><%=music.description%></textarea>
			</div>
			<button class="btn btn-block btn-success">
				Submit
			</button>
			
		</form>
	</div>

</div>




